{
  "settings": {
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "max_ngram_diff": 50
    },
    "analysis": {
      "analyzer": {
        "ngram_jamo_analyzer": {
          "type": "custom",
          "tokenizer": "ngram_tokenizer",
          "filter": ["javacafe_jamo_filter", "lowercase", "trim"]
        },
        "ngram_edge_jamo_analyzer": {
          "type": "custom",
          "tokenizer": "edge_ngram_tokenizer",
          "filter": [
            "javacafe_jamo_filter",
            "lowercase",
            "trim",
            "edge_ngram_filter_front"
          ]
        },
        "ngram_edge_jamo_analyzer_back": {
          "type": "custom",
          "tokenizer": "edge_ngram_tokenizer",
          "filter": [
            "javacafe_jamo_filter",
            "lowercase",
            "trim",
            "edge_ngram_filter_back"
          ]
        },
        "ngram_jamo_search_analyzer": {
          "type": "custom",
          "tokenizer": "ngram_tokenizer",
          "filter": ["javacafe_jamo_filter", "lowercase", "trim"]
        }
      },
      "tokenizer": {
        "ngram_tokenizer": {
          "type": "ngram",
          "min_gram": "1",
          "max_gram": "50",
          "token_chars": ["letter", "digit", "punctuation", "symbol"]
        },
        "edge_ngram_tokenizer": {
          "type": "edge_ngram",
          "min_gram": "1",
          "max_gram": "50",
          "token_chars": ["letter", "digit", "punctuation", "symbol"]
        }
      },
      "filter": {
        "edge_ngram_filter_front": {
          "type": "edge_ngram",
          "min_gram": "1",
          "max_gram": "50",
          "side": "front"
        },
        "edge_ngram_filter_back": {
          "type": "edge_ngram",
          "min_gram": "1",
          "max_gram": "50",
          "side": "back"
        },
        "javacafe_jamo_filter": {
          "type": "javacafe_jamo"
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "name": {
        "type": "keyword",
        "copy_to": [
          "nameJamoNGram",
          "nameJamoNGramEdge",
          "nameJamoNGramEdgeBack"
        ],
        "boost": 30
      },
      "nameJamoNGram": {
        "type": "text",
        "analyzer": "ngram_jamo_analyzer",
        "search_analyzer": "ngram_jamo_search_analyzer",
        "boost": 3
      },
      "nameJamoNGramEdge": {
        "type": "text",
        "analyzer": "ngram_edge_jamo_analyzer",
        "search_analyzer": "ngram_jamo_search_analyzer",
        "boost": 2
      },
      "nameJamoNGramEdgeBack": {
        "type": "text",
        "analyzer": "ngram_edge_jamo_analyzer_back",
        "search_analyzer": "ngram_jamo_search_analyzer",
        "boost": 1
      }
    }
  }
}
